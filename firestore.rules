rules_version = '2';

service cloud.firestore {

  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'taimoorshah1818@gmail.com';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data, admin can read all
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Combined rule: Users can update their own profile fields including mpinHash, admins can update subscription-related fields
      allow update: if (isAuthenticated() && isOwner(userId)) || isAdmin();
      // Users can create their own document only during registration
      allow create: if isAuthenticated() && isOwner(userId) && 
        request.resource.data.keys().hasAll(['uid', 'email', 'displayName']) &&
        request.resource.data.uid == request.auth.uid;
    }
    
    // Payment requests - users can create and read their own, admin can manage all
    match /paymentRequests/{requestId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    // Team members - stored as subcollection of users
    match /users/{userId}/teamMembers/{memberId} {
      allow read, create, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Drivers - stored as subcollection of users
    match /users/{userId}/drivers/{driverId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Vehicles - stored as subcollection of users
    match /users/{userId}/vehicles/{vehicleId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Customers - stored as subcollection of users
    match /users/{userId}/customers/{customerId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Trips - stored as subcollection of users
    match /users/{userId}/trips/{tripId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Maintenance logs - stored as subcollection of users
    match /users/{userId}/maintenance_logs/{logId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Payments - stored as subcollection of users
    match /users/{userId}/payments/{paymentId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }

  }

}